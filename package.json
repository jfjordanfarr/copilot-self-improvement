{
  "name": "copilot-self-improvement",
  "displayName": "Copilot Self-Improvement",
  "description": "A simple MCP tool to provide local instruction file metadata to GitHub Copilot.",
  "version": "0.0.1",
  "engines": { "vscode": "^1.101.0" },
  "categories": ["AI", "Chat", "Other"],
  "activationEvents": ["onStartup"],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [{
      "id": "copilot-self-improvement-provider",
      "label": "Copilot Self-Improvement"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "clean": "rimraf dist",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@types/yaml-front-matter": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.25.1",
    "glob": "^11.0.2",
    "rimraf": "^5.0.0",
    "sinon": "^20.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.1.0",
    "yaml-front-matter": "^4.1.1"
  }
}